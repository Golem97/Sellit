<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nath.ariel.sellit_v6">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SELLIT"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SellitV6"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.BuyerActivity"
            android:exported="false" />
        <activity android:name=".activities.AdminActivity"/>
        <activity android:name=".activities.AdminitemsActivity"/>
        <activity android:name=".activities.ManageusersActivity"/>
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.SellerActivity" />
        <activity android:name=".activities.TempActivity" />
        <activity android:name=".activities.MyItemsActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>