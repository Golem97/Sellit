<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/text_view_name_manageusers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_view_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="balance"
            android:layout_marginBottom="4dp"
            android:textColor="#FF0000"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/setBalanceText"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:hint="Set Balance"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/changeBalanceBtn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:text="change balance">

        </Button>

        <Button
            android:id="@+id/deleteUserBtn"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="delete user">

        </Button>

    </LinearLayout>


</androidx.cardview.widget.CardView>